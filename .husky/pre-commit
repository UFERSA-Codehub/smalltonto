# === Detect platform and activate venv ===
if [ -f "apps/core/.venv/Scripts/activate" ]; then
    # Windows Git Bash / WSL
    . "apps/core/.venv/Scripts/activate"
elif [ -f "apps/core/.venv/bin/activate" ]; then
    # Linux / macOS
    . "apps/core/.venv/bin/activate"
else
    echo "Error: Could not find virtual environment!"
    exit 1
fi

# === Run tools inside venv ===
ruff format apps/core
ruff check apps/core --fix
# python scripts/fix_docstrings.py
# pytest tests
git add .
